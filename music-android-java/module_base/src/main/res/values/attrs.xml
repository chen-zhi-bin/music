<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoginEditView">
        <attr name="inputLeftIcon" format="reference"/>
        <attr name="inputHint" format="string"/>
        <attr name="isPassword" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CodeEditView">
        <attr name="codeLeftIcon" format="reference"/>
        <attr name="codeHint" format="string"/>
        <attr name="isPhoneCode" format="boolean"/>
    </declare-styleable>

    <!-- 按照比例显示的 FrameLayout -->
    <declare-styleable name="RatioFrameLayout">
        <!-- 宽高比例 -->
        <attr name="sizeRatio" format="string" />
    </declare-styleable>

    <declare-styleable name="indicator">
        <attr name="normalColor" format="color" />
        <attr name="selectedColor" format="color" />
    </declare-styleable>

</resources>